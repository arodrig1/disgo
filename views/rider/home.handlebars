<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>DisGo - Rider Home</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="/css/normalize.css">
  <link rel="stylesheet" type="text/css" href="/css/webflow.css">
  <link rel="stylesheet" type="text/css" href="/css/disgo.webflow.css">
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script type="text/javascript" src="/js/bootstrap.js"></script>
  <script type="text/javascript" src="/js/introHCI.js"></script>
  <script>
    if (/mobile/i.test(navigator.userAgent)) document.documentElement.className += ' w-mobile';
  </script>
  <link rel="shortcut icon" type="image/x-icon" href="https://y7v4p6k4.ssl.hwcdn.net/placeholder/favicon.ico">

</head>
<body class="bgcolor-black">
  {{> navbar}}
  
  <div class="page-header" style="border-bottom:1px solid #BDBDBD; border-top:1px solid #BDBDBD">
    <center><h2>Welcome {{name}}! </h2></center>
  </div>

  <div style="overflow: hidden;">
    <div style="float: left; padding-left: 15px;">
      <h4 style="color:black">Booked Rides:</h4>
    </div>
    <div align=center style="border-top: 4px solid #E9E9E9; border-bottom: 4px solid #E9E9E9; float: right; padding-right: 15px;">
      <a class="btn btn-primary"  href="/rides/request">Request a Ride</a>
    </div>
  </div> 

  

  <div class="container">
  {{#if rides.length}}
    {{#each rides}}
      <div class="thumbnail" id="{{_id}}" style="border-bottom: 1px solid #BDBDBD; border-left: 1px solid #BDBDBD; border-right: 1px solid #BDBDBD;">
        <div class="bgcolor-red">
        <h5 class="h5" align=center>{{date}}</h5>
        <h5 class="h5" align=center><strong>{{time}}</strong></h5></div>
        {{#if alt}}
        <ul class="list-group" align=center>
          <li class="list-group-item">Driver: <b>{{driver}}</b></li>
          <li class="list-group-item">Phone <a href="tel:{{driverTel}}">{{driverTel}}</a></li>
          <li class="list-group-item">From: <b>{{from}}</b></li>
          <li class="list-group-item">To: <b>{{to}}</b></li>
        </ul>
        {{else}}
        <ul class="list-unstyled" align=center>
          <li>Driver: <b>{{driver}}</b></li>
          <li>Phone: <a href="tel:{{driverTel}}">{{driverTel}}</a></li>
          <li>From: <b>{{from}}</b></li>
          <li>To: <b>{{to}}</b></li>
        </ul>
        <div align=center>
        <a href="/rides/deleteRide/{{_id}}" class="deleteButton" onclick="return confirm('Are you sure you want to delete the ride? This action cannot be undone.');">
          <button type="button" class="btn btn-danger btn-xs">Delete</button>
        </a>
        <a href="/rides/edit/{{_id}}">
          <button type="button" class="btn btn-info btn-xs">Edit</button>
        </a>
      </div>
        {{/if}}
      </div>    
     {{/each}}
    {{else}}
      <div>No rides to display.</div>
    {{/if}}
   </div>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-48674310-1', 'disgo.herokuapp.com');
    ga('send', 'pageview');

  </script>
</body>
</html>